                    <input
                      type="range"
                      min="0"
                      max="18"
                      value={ageRange.min}
                      onChange={(e) => setAgeRange(prev => ({ ...prev, min: parseInt(e.target.value) }))}
                      className="flex-1"
                    />
                    <input
                      type="range"
                      min="0"
                      max="18"
                      value={ageRange.max}
                      onChange={(e) => setAgeRange(prev => ({ ...prev, max: parseInt(e.target.value) }))}
                      className="flex-1"
                    />
